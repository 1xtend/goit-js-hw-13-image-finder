<!DOCTYPE html>
<html lang="uk">
  <head>
    {{>partials/meta title="Image finder"}}
  </head>
  <body>

    <span class="loader"></span>

    <div class="modal ">
      <img src="" alt="" class="modal__img">
    </div>

    <div class="container">

      <form class="search-form" id="search-form">
        <div class="form-field">
          <input
            type="text"
            name="query"
            autocomplete="off"
            placeholder="Search images..."
          />
          <button type="submit">Search</button>
        </div>
      </form>
      
      <div class="gallery">
      </div>

      <button id="loadMoreBtn" class="load-btn" type="button">
        Load more
      </button>

      <button type="button" class="scroll-btn">&#8593;</button>

    </div>

  </body>
</html>